{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@bridge-2026/shared": ["../../shared"],
      "@bridge-2026/event-bus": ["../../infrastructure/event-bus"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}




